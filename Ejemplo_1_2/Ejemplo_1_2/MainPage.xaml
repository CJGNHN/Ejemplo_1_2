<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_1_2.MainPage">

    <Grid Padding="20" RowSpacing="20">
   
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Ejercicio 1.2" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
        </Frame>

        <Entry x:Name="tnombre" Keyboard="Text" Placeholder="Ingrese el Nombre"  VerticalOptions="Center" />
        <Entry x:Name="tapellido" Keyboard="Text" Placeholder="Ingrese el Apellido" VerticalOptions="Center" />
        <Entry x:Name="tedad" Keyboard="Numeric" Placeholder="Ingrese la Edad" VerticalOptions="Center" />
        <Entry x:Name="tcorreo" Keyboard="Text" Placeholder="Ingrese el Correo Electronico" VerticalOptions="Center" />

        <Button x:Name="btnEnviar" Text="Enviar información" BackgroundColor="#DFD96F" Font="Large" BorderWidth="1" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Clicked="Button_Clicked" />

    </StackLayout>
    </Grid>


</ContentPage>
